 <h3>[% l(section) %]</h3>
  <form name="section" class="form-horizontal" action="[% c.uri_for(c.action) %]" method="POST">

[% FOREACH field IN form.fields %]
  [% form.field(field.name).render %]
[% END %]

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">[% l('Save changes') %]</button>
      <a class="btn" href="[% c.uri_for(c.controller('Admin').action_for('configuration'), c.action.name) %]">[% l('Reset') %]</a>
    </div>
  </form>
