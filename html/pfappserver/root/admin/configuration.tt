        ] -%]

<style type="text/css">
.row-fluid [class*="span"] {
    display: inline-block;
}
/* position time selectors on the same row */
.row-fluid .interval input {
    float: left;
    margin-right: 4px;
}
/* fix for time units position */
.interval .btn-group {
    display: inline;
}
/* bootstrap fix for modals */
.modal form, .modal select {
    margin-bottom: 0px;
}
/* enlarge modal of violation and user source rule */
#modalViolation, #modalRule {
    margin-left: -390px;
    width: 780px;
}
/* fix inputs in tables */
table input[type="text"] {
    margin-bottom: 0px;
}
</style>
[% MACRO list_entry(controller,name) BLOCK %]
              <li[% IF section == name %] class="active"[% END %]>
                <a href="#[% c.uri_for(c.controller(controller).action_for(name)).path_query() %]">[% l(name) %]</a>
              </li>
[% END -%]
